<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>内容</th>
      <th>画像</th>
      <th>投稿者</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= post.image %></td>
        <td><%= post.user_id %></td>

        <td><%= link_to '詳細を確認する', post_path(post) %></td>
        <td><%= link_to '編集する', edit_post_path(post) %></td>
        <td><%= link_to '削除する', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しく投稿する', new_post_path %>
