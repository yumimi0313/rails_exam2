<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>内容</th>
      <th>画像</th>
      <th>投稿者</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= post.image %></td>
        <td><%= post.user.name %></td>

        <td><%= link_to '詳細を確認', post_path(post), class: "btn btn-success" %></td>
        <% if current_user.id == post.user_id %>      
        <td><%= link_to '編集', edit_post_path(post), class: "btn btn-warning" %></td>
        <td><%= link_to '削除', post, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しく投稿', new_post_path, class: "btn btn-info" %>
